nav.navbar
  .container-fluid
    .navbar-header
      button.navbar-toggle data-target="#myNavbar" data-toggle="collapse" type="button"
        span.icon-bar
        span.icon-bar
        span.icon-bar
      / a href="#"  WebSiteName
      a.navbar-brand href="/"
        = image_tag 'money.png'
    #myNavbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a ui-sref="nav.home" ng-class="{active: $state.includes('nav.home')}"
            | Features  
        li
          a ui-sref="nav.connect" ng-class="{active: $state.includes('nav.connect')}"
            | Privacy & Safety
      ul.nav.navbar-nav.navbar-right  
        li
          a ui-sref="nav.signout" ng-class="{active: $state.includes('nav.signout')}"
            | For Developers
            
.height-75
.row.center-row 
  .table-responsive.table_margin
    table.table.table-striped.table-hover#table_export
      thead
        tr
          th Code
          th Currency
          th BID
          th ASK
      tr.pointer-cursor.search-table ng-repeat="i in coins.data"
        td
          | {{i.code}}
        td
          | {{i.data.market.currency}}
        td
          | {{i.data.market.bid | number : 2}}
        td
          | {{i.data.market.ask | number : 2}}

