  .col-md-1
    p 
      | I want to 
  .col-md-1
    toggle ng-model="toggleValue" ng-change="changed()" on="Buy" off="Sell" on-class="btn-success" off-class="btn-warning"
  .col-md-2
    input.search-bar.full-width ng-change="changed()" type="text" ng-model="amount" placeholder="Amount"
  .col-md-2  
    select ng-change="changed()" ng-init="selected_coin=common_coins[0]" ng-model="selected_coin" ng-options="sort for sort in common_coins"\
